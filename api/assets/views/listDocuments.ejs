<div class="container">
  <h1>Documentos Subidos</h1>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover ">
        <thead>
        <tr>
          <th>#</th>
          <th>T&iacute;tulo</th>
          <th>Fecha</th>
          <th>Abstract</th>
          <th>Label</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="record in $ctrl.tableData">
          <td ng-bind="record.id"></td>
          <td><span class="text-warning" ng-bind="record.createdAt | date:'mediumDate'"></span></td>
          <td ng-bind="record.title"></td>
          <td ng-bind="record.abstract"></td>
          <td ng-bind="record.label"></td>
          <td><span
              class="btn btn-default btn-sm"
              ng-click="$ctrl.seePackage(record)"
              data-target="#myModal"><span class="glyphicon glyphicon-play-circle"></span>&nbsp;
                        Ver Adjuntos </span></td>
          <td><span
              class="btn btn-success btn-sm"
              ng-click="$ctrl.addDocument(record)"
              data-target="#myModalCreate"><span class="glyphicon glyphicon-plus"></span>&nbsp;
                        Agregar </span></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>

  <modal-component package="$ctrl.actualPackageToModal"></modal-component>
  <modal-create-component package="$ctrl.actualPackageToModalCreate"></modal-create-component>


</div>

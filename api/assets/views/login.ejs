<div class="main">
  <div class="login-screen"></div>
    <div class="container " style="margin-top: 20px;">
      <div class="row">
        <div class="col-xs-4 col-md-offset-8">
          <h4 class="white-color">Iniciar Sesi&oacute;n</h4>
          <form class="login-form" name="$ctrl.loginForm">
            <div class="form-group">
              <div class="input-group">
                <input type="text" name="username" class="form-control" placeholder="User" ng-model="$ctrl.username" required>
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-user"></i>
                </span>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <input type="password" name="password" class="form-control" placeholder="Password" ng-model="$ctrl.password" required>
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-lock"></i>
                </span>
              </div>
            </div>
            <button type="submit" class="btn btn-primary" ng-click="$ctrl.login()" ng-disabled="$ctrl.loginForm.$invalid">Login</button>
            <button type="button" class="btn btn-success" ng-click="$ctrl.createUser()">Crear Usuario</button>
          </form>
        </div>
      </div>
    </div>
  </div>

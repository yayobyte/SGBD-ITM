<div class="main">
  <div class="login-screen"></div>
    <div class="container " style="margin-top: 20px;">
      <div class="row">
        <div class="col-xs-4 col-md-offset-8">
          <h4 class="white-color">Crear Usuario</h4>
          <form class="login-form" name="signUpForm">
            <div class="form-group">

              <div class="input-group">
                <label for="name"></label>
                <input type="text" name="name" class="form-control" placeholder="Nombre" ng-model="$ctrl.formModels.name" required>
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-user"></i>
                </span>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <label for="lastname"></label>
                <input type="text" name="lastname" class="form-control" placeholder="Apellido" ng-model="$ctrl.formModels.lastName" required>
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-user"></i>
                </span>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <label for="username"></label>
                <input type="text" name="username" class="form-control" placeholder="Nombre de Usuario" ng-model="$ctrl.formModels.userName" required>
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-user"></i>
                </span>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <label for="password"></label>
                <input type="password" class="form-control" placeholder="Password" ng-model="$ctrl.formModels.password" name="password" required>
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-lock"></i>
                </span>
              </div>
            </div>
            <button type="submit" class="btn btn-success" ng-click="">Crear Usuario</button><br><br>
            <a ng-click="$ctrl.login()" href="">Ya tengo cuenta</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
